    %link{:href => "/fonts/ss-social.css", :rel => "stylesheet"}/
    = stylesheet_link_tag "app"
  %body
    %nav
      .row
    .row
      .twelve.columns.centered
        = yield

        %section.explore
          .row
            .ten.columns.centered
              %h5.text-center.capitalize
                Explore articles from my blog
          .row.categories
            .six.columns.text-center.centered
              %ul.no-bullet
                - blog.tags.each do |tag, articles|
                  %li
                    %a{:href => "/articles/tags/#{tag}"}
                      = tag.capitalize
                %li
                  %a{:href => "/articles"} Everything
          .row
            .six.columns.centered
              %form{:action => "http://google.com/search", :method => "get"}
                %fieldset{:role => "search"}
                  %input{:name => "q", :type => "hidden", :value => "site:mattsears.com"}/
                  %input.search{:name => "q", :placeholder => "... or search this site (via Google)", :results => "0", :type => "text"}/
        %section.browse
          .row
            .ten.columns.centered
              .row
                .six.mobile-four.columns
                  %h5
                    %b
                      Popular:
                    The most visited articles:
                  %hr/
                  %hr/
                  .row
                    .nine.columns.cell
                      %a{:href => "/articles/2011/12/10/minitest-quick-reference"}
                        Minitest Quick Reference
                  %hr/
                  .row
                    .nine.columns.cell
                      %a{:href => "/articles/2011/11/16/nyan-cat-rspec-formatter"}
                        Nyan Cat RSpec Formatter
                  %hr/
                  .row
                    .nine.columns.cell
                      %a{:href => "/articles/2011/11/27/ruby-blocks-as-dynamic-callbacks"}
                        Ruby Blocks as Dynamic Callbacks
                  %hr/
                  .row
                    .nine.columns.cell
                      %a{:href => "/articles/2009/06/06/20-clojure-links-to-get-you-up-to-speed"}
                        20 Clojure Links To Get You Up To Speed
                  %hr/
                  .row
                    .nine.columns.cell
                      %a{:href => "/articles/2011/10/12/gaga-key-value-store"}
                        Gaga, A Git-Backed Key/Value Store
                .six.mobile-four.columns
                  %h5
                    %b
                      New:
                    My most recent articles:
                  %hr/
                  - blog.articles[0...5].each do |article|
                    %hr/
                    .row
                      .nine.columns.cell
                        %a{:href => article.url}
                          = article.title
        %footer.row.text-center
          .twelve.columns
            .row
              .twelve.columns
                %p
                  You should follow me on
                  %a{:href => "https://twitter.com/mattsears", :rel => "external"} Twitter
                  and subscribe to
                  my
                  %a{:href => "http://feeds.feedburner.com/mattsears"} RSS
                  feed. Trust me.
