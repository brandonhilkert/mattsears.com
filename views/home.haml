- page_title 'Hello'
.top-section
  #recent-articles
    .box
      %h3 Recent Articles
      -Aerial::Article.recent(:limit => 4).each do |article|
        .entry
          %h2
            %a{:href => "#{article.permalink}"}=article.title
          %p
            = blurb(article.body)
    .box-foot
  #splash
.bottom-section
