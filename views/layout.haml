!!! Strict
%html{:dir => "ltr", :lang => "en-US", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-type"}/
    %title= page_title
    %meta{ 'name' => "keywords", 'content' => 'Matt Sears, Matt, Sears' }
    %meta{ 'author' => "Matt Sears" }
    %link{:href => "http://#{host}/feed.xml", :rel => 'alternate', :type => 'application/atom+xml', :title => "Feed for #{Aerial.config.name}" }
    %link{:href => "/images/favicon.gif", :rel => "shortcut icon"}/
    %link{:href => "/style.css", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    /[if IE 6]
      <link rel="stylesheet" href="css/ie6.css" type="text/css" media="all" />
    %script{:charset => "utf-8", :src => "/javascripts/jquery-1.4.2.min.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/javascripts/jquery.jcarousel.pack.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/javascripts/jflickrfeed.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/javascripts/jquery.tweet.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/javascripts/cufon-yui.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/javascripts/Rockwell_Bold_700.font.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/javascripts/HoeflerTextItalic_italic_500.font.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/javascripts/InterstateBold_400.font.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/javascripts/application.js", :type => "text/javascript"}
  %body{:class => "#{path}" }
    .page-bg &nbsp;
    #header
      .shell
        .header-bg &nbsp;
        .cl &nbsp;
        %a{:href => "/"}
          %h1#logo.nocufon
        .right
          .cl &nbsp;
          #navigation
            %ul
              %li.home-link
                %a{:href => "/"}
                  %span Home
                  %span.hover-state &nbsp;
              %li.articles-link
                %a{:href => "/articles"}
                  %span Articles
                  %span.hover-state &nbsp;
              %li.contact-link
                %a{:href => "mailto:matt@mattsears.com"}
                  %span Contact
                  %span.hover-state &nbsp;
          .cl &nbsp;
        .cl &nbsp;
    #main
      .shell= yield
    #footer
      .shell
        .left
          %p &copy; Copyright 2010 Matt Sears. All Rights Reserved.
        %p.footer-navigation
          %a{:href => "#"} HOME
          %a{:href => "#"} ARTICLES
          %a{:href => "#"} CONTACT
        .cl &nbsp;
    :javascript
      Cufon.now();
      //
      (function() {
        var links = document.getElementsByTagName('a');
        var query = '?';
        for(var i = 0; i < links.length; i++) {
        if(links[i].href.indexOf('#disqus_thread') >= 0) {
          query += 'url' + i + '=' + encodeURIComponent(links[i].href) + '&';
        }
        }
        document.write('<script charset="utf-8" type="text/javascript" src="http://disqus.com/forums/mattsears/get_num_replies.js' + query + '"></' + 'script>');
      })();
      //
