!!! Strict
%html{:dir => "ltr", :lang => "en-US", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-type"}/
    %title= yield_content :title
    %meta{ 'name' => "keywords", 'content' => 'Matt Sears, Matt, Sears' }
    %meta{ 'author' => "Matt Sears" }
    %link{:href => "http://#{host}/feed.xml", :rel => 'alternate', :type => 'application/atom+xml', :title => "Feed for #{Aerial.config.name}" }
    %link{:href => "/images/favicon.png", :rel => "shortcut icon"}/
    %link{:href => "/style.css", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    /[if IE 6]
      <link rel="stylesheet" href="css/ie6.css" type="text/css" media="all" />
    %script{:charset => "utf-8", :src => "/javascripts/jquery-1.4.2.min.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/javascripts/cufon-yui.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/javascripts/titillium_400_mod2.font.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/javascripts/titillium_800_mod2.font.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/javascripts/cross-fade.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/javascripts/application.js", :type => "text/javascript"}
  %body{:class => "#{@body_class ||= 'index'}" }
    .page-bg &nbsp;
    #header
      .shell
        .cl &nbsp;
        %a{:href => "/"}
          %h1#logo.nocufon
        .right
          .cl &nbsp;
          #navigation
            %ul
              %li.home-link
                %a{:href => "/"} Home
              %li.divider /
              %li.articles-link
                %a{:href => "/articles"} Articles
              %li.divider /
              %li.tumblr-link
                %a{:href => "http://mattsears.tumblr.com"} Notebook
              %li.divider /
              %li.about-link
                %a{:href => "/about"} About
              %li.divider /
              %li.contact-link
                %a{:href => "mailto:matt@mattsears.com"}
                  Contact
          .cl &nbsp;
        .cl &nbsp;
    #main
      .shell= yield
    #footer
      .shell
        .left
          %p &copy; Copyright #{Time.now.year} Matt Sears. All Rights Reserved.
        %p.footer-navigation
          Powered by
          %a{:href => "http://mattsears.github.com/aerial", :rel => 'external'} aerial
          on
          %a{:href => "http://heroku.com", :rel => 'external'} heroku
        .cl &nbsp;
    :javascript
      Cufon.now();
      //
      (function() {
        var links = document.getElementsByTagName('a');
        var query = '?';
        for(var i = 0; i < links.length; i++) {
        if(links[i].href.indexOf('#disqus_thread') >= 0) {
          query += 'url' + i + '=' + encodeURIComponent(links[i].href) + '&';
        }
        }
        document.write('<script charset="utf-8" type="text/javascript" src="http://disqus.com/forums/mattsears/get_num_replies.js' + query + '"></' + 'script>');
      })();
      //
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-2776418-3']);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
